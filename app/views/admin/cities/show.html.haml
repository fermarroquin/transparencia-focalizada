- model_class = City
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:state_id) + ':'
  %br
  = @city.state.name unless @city.state.nil?
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @city.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_cities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_city_path(@city), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_city_path(@city), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
