- model_class = City
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:state_id)
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cities.each do |city|
      %tr
        %td= city.state.name unless city.state.nil?
        %td= city.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_city_path(city), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_city_path(city), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= will_paginate @cities

= link_to t('.new', :default => t("helpers.links.new")), new_admin_city_path, :class => 'btn btn-primary'
