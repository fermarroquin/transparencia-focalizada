- model_class = State
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @states.each do |state|
      %tr
        %td= state.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_state_path(state), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), state_path(state), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= will_paginate @states

= link_to t('.new', :default => t("helpers.links.new")), new_state_path, :class => 'btn btn-primary'
